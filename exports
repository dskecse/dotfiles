#!/usr/bin/env bash

export RI="--format ansi"

export PATH="$HOME/.bin:$HOME/bin:$PATH"

export PATH="/usr/local/sbin:$PATH"

export PATH="$PATH:/usr/local/lib/node_modules"

# shellcheck disable=SC2155
export PATH="$PATH:$(yarn global bin)"

# The sqlite formula is keg-only, which means it was not symlinked
# into /usr/local, because macOS provides an older sqlite3.
export PATH="/usr/local/opt/sqlite/bin:$PATH"

if [[ ! -d "$HOME/.nvm" ]]; then
  mkdir ~/.nvm
fi
export NVM_DIR="$HOME/.nvm"

# shellcheck disable=SC1090
source "$(brew --prefix nvm)/nvm.sh"

export RUBY_CONFIGURE_OPTS
RUBY_CONFIGURE_OPTS="--with-openssl-dir=$(brew --prefix openssl) --with-readline-dir=$(brew --prefix readline)"

eval "$(keychain --eval --agents gpg --quiet)"

unset DOCKER_TLS_VERIFY
unset DOCKER_CERT_PATH
unset DOCKER_MACHINE_NAME
unset DOCKER_HOST

# shellcheck disable=SC1090
source ~/.github_token
